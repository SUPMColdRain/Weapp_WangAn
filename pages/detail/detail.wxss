/* pages/detail/detail.wxss */

page{
  background: #f7f7f7;
}
.container{
  min-height: 650px;
  font-size:16px;
}
.goods{
  width: 100%;
  height: 580px;
  background: #fff;
}
.bottomBar{
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
}
.choose-amount{
  width: 151px;
  height: 30px;
  display: inline-block;
  padding: 10px 0;
  font-size:12px;
}
.optionBar{
  width: 151px;
  height: 40px;
  display: inline-block;
  padding-top: 10px;
  font-size:12px;
  vertical-align: top;
}
.bar_item{
  width: 50px;
  height: 40px;
  display: inline-block;
  vertical-align: top;
}
.bar_item_text{
  width: 50px;
  text-align: center;
}
.cartButton{
  width: 80px;
  height: 20px;
  background: #fb9606;
  display: inline-block;
  padding: 15px 16px;
}
.shopButton{
  width: 80px;
  height: 20px;
  background: #e93b3d;
  display: inline-block;
  padding: 15px 16px;
}

/*bottomBar细调*/
.text{
  color: #fff;
  height: 16px;
}
.choose-container{
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 90px;
  height: 28px;
  display: inline-block;
}
.choose-title{
  width: 24px;
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
  display: inline-block;
  vertical-align:top;
  color:#333;
}
.border-style{
  width: 30px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  display:inline-block;
  vertical-align:top;
}
.choose-input{
  width: 22px;
  padding: 0 3px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*商品详情*/
.recommend{
  width: 355px;
  height: 170px;
  padding: 0 10px; 
}
.recommendTheme{
  font-size: 24px;
  font-weight: bold;
  color: #222;
  padding-bottom: 10px; 
}
.recommendReason{
  font-size: 14px;
  color: rgb(190, 94, 89);
}
.skuPrice{
  padding-top: 10px;
  font-size: 24px;
  color: #c94740;
}