.container{
  background: #f7f7f7;
}
.page_hd {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
  background: #333;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}

.wide-frontier{
  width: 315px;
  min-height: 350px;
  height: 100%; 
  padding: 10px 30px;
}
.wide-content{
  background: #fff;
  height: 60px;
  margin: 10px 0;
}
.wide-info{
  width: 285px;
  height: 30px;
  padding: 15px;
  align-items: center;
  flex-direction: row;
  display: flex;
}
.my-setting{
  display: inline-block;
  flex: 1;
  width: 255px;
  height: 30px;
}