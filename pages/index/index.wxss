.container{
  font-size: 12px;
  background: #f7f7f7;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page_hd{
  height: 450px;
}

.bc_green{
  background: #09BB07;
}
.bc_red{
  background: #F76260;
}
.bc_blue{
  background: #10AEFF;
}
.bc_yellow{
  background: #FFBE00;
}
.bc_gray{
  background: #C9C9C9;
}
swiper{
  height: 300px;
}
.swiper-item{
  display: block;
  height: 300px;
}
.slide-image{
  width: 375px;
  height: 300px;
}
.search{
  position: fixed;
  left: 0;
  top: 0;
  padding: 20px;
  z-index: 9;
}
.search_frame{
  width: 335px;
  height: 30px;
  background: #e0e0e0;
  opacity: 0.4;
  border-radius: 12px;
}
.search_image{
  width: 20px; 
  height: 20px;
  margin: 5px;
  vertical-align: top;
}
.search_value{
  font-size: 16px;
  height: 30px;
  line-height: 30px;
  color: #222;
}
.image-tag{
  width: 375px;
  height: 150px;
}
.image-style{
  margin-top: 10px;
  padding: 10px;
  width: 167px;
  height: 130px;
  border-radius: 37px;
}
.page_content{
  width: 375px;
  height: 100px;
  padding-top: 10px;
}
.t_title{
  font-size: 26px;
  margin-left: 10px;
}
.c_title{
  flex: 1;
  width: 250px;
  display: inline-block;
  color: #666;
}
.total{
  width: 300px;
  height: 45px;
  margin-left: 10px;
  background: #FFF;
  border-radius: 5px;
  padding: 5px 26px;
  box-shadow: 5px 5px 5px #ddd;
  align-items: center;
  display: flex;
}
.de_con{
  width: 40px;
  height: 40px;
}
.tag_content{
  margin: 20px;
  width: 335px;
  height: 100%;
  background: #fff;
}
.tag_title{
  position: relative;
  width: 150px;
  height: 45px;
  font-size: 28px;
  text-align: center;
  line-height: 45px;
  padding: 0 50px;
  margin: 0 auto 20px;
  overflow: hidden;
  color: #222;
}
.tag_title:after{
  content: '';
  position: absolute;
  width: 50px;
  height: 3px;
  display: block;
  background: #222;
  top: 19px;
  right: 0;
}
.tag_title:before{
  content: '';
  position: absolute;
  width: 50px;
  height: 3px;
  display: block;
  background: #222;
  top: 19px;
  left: 0;
}
.item-head{
  width: 155px;
  height: 150px;
  display: inline-block;
  padding: 10px 0 0 10px;
  border: 1px solid #eee;
}
.item-title{
  width: 130px;
  height: 18px;
  padding-top: 5px;
  padding-left: 10px;
  color: #666;
  text-align: center;
  overflow: hidden;
}